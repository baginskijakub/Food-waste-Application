            <TableColumn fx:id="quantity" prefWidth="100.0" text="Quantity" />
            <TableColumn fx:id="price" prefWidth="100.0" text="Starting from" />
        </columns>
      </TableView>
      <Button layoutX="31.0" layoutY="27.0" mnemonicParsing="false" text="&lt;" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="40.0" onAction="#backButton">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
      </Button>
      <Button layoutX="855.0" layoutY="104.0" mnemonicParsing="false" onAction="#loginButton" text="Login" AnchorPane.rightAnchor="40.0">
         <font>
            <Font name="Arial" size="18.0" />
