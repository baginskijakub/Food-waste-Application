            <CheckBox fx:id="fruits" mnemonicParsing="false" text="Fruits">
               <font>
                  <Font name="Arial" size="16.0" />
               </font></CheckBox>
            <CheckBox fx:id="vegetables" mnemonicParsing="false" text="Vegetables">
               <font>
                  <Font name="Arial" size="16.0" />
